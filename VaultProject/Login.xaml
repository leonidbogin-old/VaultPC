<Window x:Class="VaultProject.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VaultProject"
        mc:Ignorable="d"
        Title="Vault Login" 
        Height="400" 
        Width="400" 
        AllowsTransparency="True" 
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="{x:Null}" ResizeMode="NoResize">
  <Grid>
    <Image MouseDown="FormDrag" Source="splash2.png"/>
    <PasswordBox
      Name="Login_Text"
      BorderThickness="0"
      Background="Transparent"
      FontSize="30"
      Foreground="Gray"
      HorizontalContentAlignment="Center"
      VerticalContentAlignment="Center"
      FontFamily="./fonts/#Liberator Heavy"
      Margin="127,174" SelectionOpacity="0.1"/>
    <Button
      Name="Login_Close"
      Margin="162,125,162,249"
      Content="CLOSE"
      BorderThickness="0"
      Background="Transparent"
      HorizontalContentAlignment="Center"
      VerticalContentAlignment="Center"
      FontFamily="./fonts/#Liberator Heavy"
      Style="{DynamicResource LoginButton}"
      Foreground="Gray"
      FontSize="16"
      Click="Login_Click"/>
    <Button
      Name="Login_Enter"
      Margin="162,249,162,125"
      Content="ENTER"
      BorderThickness="0"
      Background="Transparent"
      HorizontalContentAlignment="Center"
      VerticalContentAlignment="Center"
      FontFamily="./fonts/#Liberator Heavy"
      Style="{DynamicResource LoginButton}"
      Foreground="Gray"
      FontSize="16"
      Click="Login_Click"/>
  </Grid>
</Window>
